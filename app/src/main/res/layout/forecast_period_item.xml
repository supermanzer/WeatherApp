<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/forecast_period_item"
    >

    <ImageView
        android:id="@+id/forecast_period_icon"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_margin="4dp"
        android:contentDescription="@string/weather_icon"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/forecast_period_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toEndOf="@id/forecast_period_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="6dp"
        />

    <com.google.android.material.textview.MaterialTextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@id/forecast_period_name"
        app:layout_constraintStart_toEndOf="@id/forecast_period_icon"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/forecast_period_desc"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="4dp"
        android:layout_marginRight="2dp"
        android:breakStrategy="high_quality"
        />


</androidx.constraintlayout.widget.ConstraintLayout>